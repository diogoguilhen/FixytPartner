<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixyt.fixytMotor.Registrar_3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_tela"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icone_fixyt"
        android:layout_marginTop="27dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Escolha seu tipo de perfil!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/perfilGuincho"
            android:layout_width="141dp"
            android:layout_height="145dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"

            app:srcCompat="@drawable/icone_guincho" />

        <ImageView
            android:id="@+id/perfilCarroMoto"
            android:layout_width="141dp"
            android:layout_height="145dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="40dp"

            app:srcCompat="@drawable/icone_carromoto" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCheckGuincho"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCheckCarroMoto"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">


    </LinearLayout>


    <Button
        android:id="@+id/botProximo3"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="PrÃ³ximo" />

</RelativeLayout>

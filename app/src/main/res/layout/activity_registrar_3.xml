<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixyt.fixytMotor.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_tela"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icone_fixyt"
        android:layout_marginTop="27dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ola, falta pouco para se registrar!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Tipo de Veículo:"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/background_light"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spinnerTpCarro"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/TipoVeiculo"
                    android:background="@android:drawable/btn_dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Marca do Veículo:"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/background_light"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spinnerMarcaCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/MarcaVeiculo"
                    android:background="@android:drawable/btn_dropdown"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/campoModeloVeiculo"
                android:hint="Modelo do Veiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="Ano Fabricação:"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/background_light"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spinnerAnoFabricacao"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/AnoVeiculo"
                    android:background="@android:drawable/btn_dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="Ano Modelo:"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/background_light"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spinnerAnoModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/AnoVeiculo"
                    android:background="@android:drawable/btn_dropdown"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/campoPlacaVeiculo"
                    android:hint="Placa Veiculo"
                    android:inputType="text"
                    android:maxLength="8"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/campoRenavam"
                android:hint="Renavam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white"
                android:inputType="number" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/campoKmVeiculo"
                    android:hint="Km. Atual"
                    android:inputType="number"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:textColorLink="@android:color/holo_blue_dark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/campoCorVeiculo"
                android:hint="Cor do Veiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white"
                android:inputType="text" />



        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/botFinalizar"
        android:text="Finalizar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
